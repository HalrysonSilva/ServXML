

unit Frm_Status;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls, ExtCtrls;

type
  TfrmStatus = class(TForm)
    Panel1: TPanel;
    lbl1: TLabel;
    lblStatus: TLabel;
    Panel2: TPanel;
    btncancelarinu: TButton;
    MemoRetorno: TMemo;
    Timer1: TTimer;
    procedure Timer1Timer(Sender: TObject);
    procedure btncancelarinuClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  frmStatus: TfrmStatus;
  Cancelado: Boolean;

implementation

{$R *.dfm}

procedure TfrmStatus.btncancelarinuClick(Sender: TObject);
begin
  Cancelado := True;
  ShowMessage('Cancelamento solicitado. Processo será interrompido.');
end;

procedure TfrmStatus.Timer1Timer(Sender: TObject);
begin

  MemoRetorno.Lines.Add('Novo retorno recebido em: ' + DateTimeToStr(Now));
  MemoRetorno.SelStart;
end;


end.
